<p id="notice"><%= notice %></p>

<h1>Units</h1>

<form action="/units" method="GET">
  DNI del Miembro: <input type="text" name="DNI" value="<%= @member %>"/>
  <input type="submit"/>
</form>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Motto</th>
      <th>Miembros</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @units.each do |unit| %>
      <tr>
        <td><%= unit.name %></td>
        <td><%= unit.motto %></td>
        <td><%#= unit.member.first_name %></td>
        <td><%= link_to 'Show', unit %></td>
        <td><%= link_to 'Edit', edit_unit_path(unit) %></td>
        <td><%= link_to 'Destroy', unit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Unit', new_unit_path %>
